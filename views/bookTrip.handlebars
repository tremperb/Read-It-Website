{{> header}}

<main class="content">

  <section class="new-container">
    <div class="name-container">
      <h2 class="my-name"><u><em>Book A Trip</em></u></h2>
      <h4> <em> Here lies an example of what booking a trip may be like </em> </h4>

      <div class="info-container">
        <h4> Participant Information </h4>
        <form>
          <div class="participant-container">
            <label for="fname">First name: </label><input type="text" id="fname"><br><br>
            <label for="fname">Last name: </label><input type="text" id="lname"><br><br>
            <label for="fname">Email: </label><input type="email" id="email"><br><br>
            <label for="fname">Age: </label><input type="number" id="age"><br><br>
            <label for="fname">Phone: </label><input type="phone" id="phone"><br><br>
          </div>
          <div class="trip-container">
            <h4> Please Select Your Trip </h4>
            <select>
              <option selected value="">Please Select A Trip</option>
              <option>Hiking In The Alps</option>
              <option>Exploring Yellowstone</option>
              <option>White Water Rafting In The Grand Canyon</option>
              <option>Climbing Mount Everest</option>
            </select>
            <br> <br>
          </div>
          <h4> Would you like to create a packing list? </h4>
          <input type="checkbox" id="myCheck" onclick="getPackingList()">Yes</input>

          <div class="taking-container" id="taking-list" style="display:none;">
            <h4> What Do You Plan on Taking? </h4>
            <label for="fname">Trip Equipment: </label><input type="text" id="fname"><br><br>
            <label for="fname">Clothing: </label><input type="text" id="lname"><br><br>
            <label for="fname">Water Amount: </label><input type="number" id="email"><br><br>
            <label for="fname">Food Meals Amount: </label><input type="number" id="age"><br><br>
          </div>

          <br> <br> <input type="submit" value="Submit"> <br> <br>
        </form>
      </div>
    </div>
  </section>

</main>
